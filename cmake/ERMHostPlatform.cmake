if("${CMAKE_HOST_SYSTEM_NAME}" STREQUAL "Windows")
    set(ERM_HOST_PLATFORM "WIN" CACHE STRING "" FORCE)
    set(ERM_HOST_WINDOWS ON CACHE BOOL "" FORCE)
elseif("${CMAKE_HOST_SYSTEM_NAME}" STREQUAL "Darwin")
    set(ERM_HOST_PLATFORM "OSX" CACHE STRING "" FORCE)
    set(ERM_HOST_OSX ON CACHE BOOL "" FORCE)
elseif("${CMAKE_HOST_SYSTEM_NAME}" STREQUAL "Linux")
    set(ERM_HOST_PLATFORM "LINUX" CACHE STRING "" FORCE)
    set(ERM_HOST_LINUX ON CACHE BOOL "" FORCE)
else()
	message(FATAL_ERROR "Host platform not supported: ${CMAKE_HOST_SYSTEM_NAME}")
endif()

message(STATUS "Detected ${ERM_HOST_PLATFORM} host platform")
